<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Express Website</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="./css/style.css" />
  </head>
  <body>
    {{>header}}
    <main>
      <section class="my-5 mx-5">
        <div class="row justify-content-center">
          <div class="col-4">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">Weather Page</h5>
                  <form action="" class="temp_form">
                    <div class="input-group mb-3 mt-3">
                        <input type="text" class="form-control" id="weather_input" placeholder="Enter City Name" aria-label="Recipient's username" aria-describedby="basic-addon2">
                      <div class="input-group-append">
                        <button class="btn btn-outline-secondary" id="weather_btn" type="button">Search</button>
                      </div>
                    </div>
                  </form>
                <div class="card">
                  <div class="card-body">
                    <h5><span id="day">Monday</span></h5>
                    <h5><span id="date">13 Oct</span></h5>
                    <h5><span id="city_name">Pune</span></h5>
                    <h5><span id="temp">0</span><sup>0</sup>c</h5>
                    <h5><span id="temp_status">Cloud</span></h5>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>
    {{>footer}}
  </body>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
    crossorigin="anonymous"
  ></script>
  <script src="../../public/js/script.js" type="text/javascript"></script>
</html>
